<h1>Car List</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Price</strong></td>
    </tr>
    <% @cars.each do |car| %>
      <tr>

        <td><%= car.name %></td>
        <td>$<%= car.price_per_day %> / day</td>
        <% if current_user.admin %>
          <td><%= link_to "Show #{car.name}", car_path(car) %></td>
        <% else %>
          <td><%= link_to "Book", car_path(car) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "Back to profile", @user, {:class => "btn btn-primary"} %>
