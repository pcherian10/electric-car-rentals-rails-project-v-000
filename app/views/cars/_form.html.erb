<%= form_for (@car) do |f| %>

  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %><br>

  <%= f.label :top_speed, "Top Speed in km/h"%><br>
  <%= f.number_field :top_speed %><br>

  <%= f.label :range, "Range per Charge in km"%><br>
  <%= f.number_field :range %><br>

  <%= f.label :charge_time, "Charge up time in hours"%><br>
  <%= f.number_field :charge_time %><br>

  <%= f.label :price_per_day, "Rental Price per Day"%><br>
  <%= f.number_field :price_per_day %><br><br>

  <%= f.submit %>

<% end %>
