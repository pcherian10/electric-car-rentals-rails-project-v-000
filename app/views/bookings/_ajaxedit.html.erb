
<div class="container white-box">

    <%= form_for [@user, @booking] do |f| %>

      <p>Your reservation for the <%=@booking.car.name %></p>

      <%= f.label :start_date, "Start" %>
      <%= f.date_field :start_date, min: Date.today %><br><br>

      <%= f.label :end_date, "End" %>
      <%= f.date_field :end_date, min: Date.today %><br><br>

      <%= f.hidden_field :user_id, :value => @user.id %>
      <%= f.hidden_field :car_id, :value => @booking.car.id %>

      <%=f.submit %>

    <% end %>

</div>

<%= link_to 'Delete', user_booking_path(@user, @booking),
          data: {:confirm => 'Are you sure?'}, :method => :delete %>
